<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.assignment2.hrmps.controller.AttendanceController"
            prefHeight="600.0" prefWidth="800.0">

    <children>
        <VBox spacing="10.0" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0"
              AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="10.0">

            <Label text="Attendance Records" />

            <TableView fx:id="attendanceTable" prefHeight="200.0">
                <columns>
                    <TableColumn fx:id="employeeColumn" text="Employee" prefWidth="200.0" />
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="200.0" />
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="150.0" />
                </columns>
            </TableView>

            <HBox spacing="10.0">
                <Label text="Employee:" />
                <ComboBox fx:id="employeeBox" prefWidth="200.0" />

                <Label text="Date:" />
                <DatePicker fx:id="datePicker" />

                <Label text="Status:" />
                <ComboBox fx:id="statusBox" prefWidth="150.0" />

                <Button text="Add Attendance" onAction="#addAttendance" />
            </HBox>

            <Separator />

            <Label text="Leave Records" />

            <TableView fx:id="leaveTable" prefHeight="200.0">
                <columns>
                    <TableColumn fx:id="leaveEmployeeColumn" text="Employee" prefWidth="150.0" />
                    <TableColumn fx:id="leaveTypeColumn" text="Type" prefWidth="100.0" />
                    <TableColumn fx:id="leaveStartColumn" text="Start Date" prefWidth="120.0" />
                    <TableColumn fx:id="leaveEndColumn" text="End Date" prefWidth="120.0" />
                    <TableColumn fx:id="leaveStatusColumn" text="Status" prefWidth="100.0" />
                </columns>
            </TableView>

            <HBox spacing="10.0">
                <Label text="Type:" />
                <ComboBox fx:id="leaveTypeBox" prefWidth="120.0" />

                <Label text="Status:" />
                <ComboBox fx:id="leaveStatusBox" prefWidth="120.0" />

                <Label text="Start:" />
                <DatePicker fx:id="leaveStartPicker" />

                <Label text="End:" />
                <DatePicker fx:id="leaveEndPicker" />

                <Button text="Add Leave" onAction="#addLeave" />
            </HBox>

        </VBox>
    </children>

</AnchorPane>